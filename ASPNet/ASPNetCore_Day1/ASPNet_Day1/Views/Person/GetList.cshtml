@model IEnumerable<ASPNet_Day1.Models.Person>
@{
    ViewData["Title"] = "Person List";
}

<h1>Person List</h1>

<div>
    <a asp-action="Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Birthplace</th>
            <th>Date of Birth</th>
            <th>Is Graduated</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Gender</td>
                <td>@person.BirthPlace</td>
                <td>@person.DateOfBirth.ToShortDateString()</td>
                <td>@(person.IsGraduated ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@person.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@person.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
