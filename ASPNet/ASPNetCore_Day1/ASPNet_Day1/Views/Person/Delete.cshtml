@model ASPNet_Day1.Models.Person 

<h1>Delete Person</h1>

<h4>Are you sure you want to delete this person?</h4>
<div>
    <h4>First Name: @Model.FirstName</h4>
    <h4>Last Name: @Model.LastName</h4>
    <h4>Gender: @Model.Gender</h4>
    <h4>Birthplace: @Model.BirthPlace</h4>
    <h4>PhoneNumber: @Model.PhoneNumber</h4>
    <h4>Date of Birth: @Model.DateOfBirth.ToShortDateString()</h4>
    <h4>Is Graduated: @(Model.IsGraduated ? "Yes" : "No")</h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
